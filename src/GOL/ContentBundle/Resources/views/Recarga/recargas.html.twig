{% extends 'operador.html.twig' %}
{% block content %}
    <div class="container-fluid">
        <div class="page-content">
            <!-- BEGIN BREADCRUMBS -->
            <div class="breadcrumbs">
                <h1>Recargas</h1>
                <ol class="breadcrumb">
                    <li>
                        <a href="{{ env }}">Inicio</a>
                    </li>
                    <li class="active">Recargas</li>
                </ol>
            </div>
            <!-- END BREADCRUMBS -->
            <!-- BEGIN PAGE BASE CONTENT -->
            <div class="row">
                <div class="col-md-12">
                    <!-- Begin: life time stats -->
                    <div class="portlet light portlet-fit portlet-datatable bordered">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class=""></i>
                                <span class="caption-subject font-green sbold uppercase">Total de Recargas</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="table-container">
                                <div id="datatable_ajax_wrapper" class="dataTables_wrapper dataTables_extended_wrapper no-footer">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover table-checkable dataTable no-footer" id="datatable_ajax" aria-describedby="datatable_ajax_info" role="grid">
                                            <thead>
                                                <tr role="row" class="heading">
                                                    <th width="43%" class="sorting" tabindex="0" aria-controls="datatable_ajax" rowspan="1" colspan="1"> # Teléfono </th>
                                                    <th width="42%" class="sorting" tabindex="0" aria-controls="datatable_ajax" rowspan="1" colspan="1"> Total Recargas </th>
                                                    <th width="15%" class="sorting" tabindex="0" aria-controls="datatable_ajax" rowspan="1" colspan="1"> Acción </th>
                                                </tr>
                                                <tr role="row" class="filter">
                                                    <td rowspan="1" colspan="1">
                                                        <input type="text" class="form-control form-filter input-sm" name="order_id"> 
                                                    </td>
                                                    <td rowspan="1" colspan="1"></td>
                                                    <td rowspan="1" colspan="1" class="text-center">
                                                        <button class="btn btn-sm blue-steel table-group-action-submit">
                                                            <i class="fa fa-search"></i> Filtrar</button>
                                                        <button class="btn btn-sm red table-group-action-submit">
                                                            <i class="fa fa-close"></i> Borrar</button>
                                                    </td>
                                                </tr>
                                            </thead>
                                            <tbody> 
                                                {% for recarga in recargas %}
                                                    <tr>
                                                        <td rowspan="1" colspan="1">{{ recarga.noCelular }}</td>
                                                        <td rowspan="1" colspan="1">$ {{ recarga.total_recarga | number_format(0, ',', '.') }}</td>
                                                        <td rowspan="1" colspan="1" class="text-center"><a href="{{ env }}detalles-recargas/{{ recarga.noCelular }}" class="btn btn-sm btn-outline dark table-group-action-submit"> Ver detalles </a></td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-8 col-sm-12">
                                            <div class="dataTables_paginate paging_bootstrap_extended">
                                                <div class="pagination-panel"> Pag. 
                                                    <a href="#" class="btn btn-sm default prev disabled"><i class="fa fa-angle-left"></i></a>
                                                    <input type="text" class="pagination-panel-input form-control input-sm input-inline input-mini" maxlenght="5" style="text-align:center; margin: 0 5px;" value="1" disabled>
                                                    <a href="#" class="btn btn-sm default next disabled"><i class="fa fa-angle-right"></i></a> de 
                                                    <span class="pagination-panel-total"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End: life time stats -->
                </div>
            </div>
            <!-- END PAGE BASE CONTENT -->
        </div>
    {% endblock %}
